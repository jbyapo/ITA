<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
   xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context = "http://www.springframework.org/schema/context"
   xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <context:annotation-config/>
    
	<bean id ="helloSpring" class="com.oocl.ita.yapo.day13.sampleexercise.HelloSpringTest">
		<property name="message" value="Hey dude!"/>
	</bean>
	
	<bean id ="helloSpring3" class="com.oocl.ita.yapo.day13.sampleexercise.HelloSpring_init_dest" init-method="init" destroy-method="destroy">
		<property name="message" value="Hey dude!"/>
	</bean>
	
   <bean id="shape1" class="com.oocl.ita.yapo.day13.sampleexercise.Shape">
      <property name = "shape">
         <bean id = "circle" class = "com.oocl.ita.yapo.day13.sampleexercise.Circle"/>
      </property>
   </bean>
   
   <bean id="shape2" class="com.oocl.ita.yapo.day13.sampleexercise.Shape">
      <property name = "shape">
         <bean id = "triangle" class = "com.oocl.ita.yapo.day13.sampleexercise.Triangle"/>
      </property>
   </bean>
   
   	<bean id ="employee" class="com.oocl.ita.yapo.day13.sampleexercise.Employee">
		<property name="name" value="Japo Jabe"/>
		<property name="role" value="Model"/>
		<property name="id" value="1107"/>
	</bean>
	

   <!-- Definition for student bean -->
   <bean id = "student" class = "com.oocl.ita.yapo.day14.sampleexercise.Student">
      <property name = "name" value = "Jabe"/>
      <property name = "age"  value = "22"/>
   </bean>
   
   <!-- Definition for textEditor bean without constructor-arg  -->
   <bean id = "textEditor" class = "com.oocl.ita.yapo.day14.sampleexercise.TextEditor"></bean>

   <!-- Definition for spellChecker bean -->
   <bean id = "spellChecker" class = "com.oocl.ita.yapo.day14.sampleexercise.SpellChecker"></bean>
   
      <!-- Definition for profile bean -->
   <bean id = "profile" class = "com.oocl.ita.yapo.day14.sampleexercise.Profile"></bean>

   <!-- Definition for student1 bean -->
   <bean id = "student1" class = "com.oocl.ita.yapo.day14.sampleexercise.Student1">
      <property name = "name" value = "Wei" />
      <property name = "age" value = "17"/>
   </bean>
   
   
   <bean id = "helloWorld" class = "com.oocl.ita.yapo.day14.sampleexercise.HelloWorld">
      <property name = "message" value = "Hello World!"/>
   </bean>
  

   <bean id = "cStartEventHandler" class = "com.oocl.ita.yapo.day14.sampleexercise.CStartEventHandler"/>
   <bean id = "cStopEventHandler" class = "com.oocl.ita.yapo.day14.sampleexercise.CStopEventHandler"/>
	
</beans>